<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iavariav.root.asuransi.Activity.User.Activity.DetailProfilUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciFoto"
            android:layout_centerVertical="true"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:transitionName="image"
            android:src="@drawable/asuransi" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/ciFoto"
            android:layout_alignEnd="@+id/ciFoto"
            android:layout_alignRight="@+id/ciFoto"
            android:layout_gravity="top|right"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabDetailProfilSaveProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom|end|left"
            android:layout_marginTop="212dp"
            app:srcCompat="@android:drawable/ic_menu_save" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:paddingRight="10dp"
                android:hint="Nama"
                android:textStyle="bold"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:paddingRight="10dp"
                android:hint="No HP"
                android:textStyle="bold"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:paddingRight="10dp"
                android:hint="Alamat"
                android:textStyle="bold"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
