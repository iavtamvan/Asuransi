<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.iavariav.root.asuransi.Activity.User.Activity.Fragment.MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8sp"
        android:background="@color/grey_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/as"/>

        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/divJiwa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3sp"
                            android:padding="5dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90sp"
                                android:layout_height="50sp"
                                android:src="@drawable/care" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#020202"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:text="JIWA" />
                        </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:id="@+id/divKesehatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3sp"
                            android:padding="5dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90sp"
                                android:layout_height="50sp"
                                android:src="@drawable/doctor" />

                            <TextView
                                android:textAllCaps="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#030303"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:text="kesehatan" />
                        </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#fff"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/divLoker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10sp"
                                    android:padding="5dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="90sp"
                                        android:layout_height="50sp"
                                        android:src="@drawable/accountant" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#060606"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:text="LOKER" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <View
                        android:visibility="gone"
                        android:layout_width="1dp"
                        android:layout_height="150sp"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/divKendaraan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3sp"
                            android:padding="5dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="90sp"
                                android:layout_height="50sp"
                                android:src="@drawable/car" />

                            <TextView
                                android:textColor="#060606"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="KENDARAAN" />
                        </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:id="@+id/divProperti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3sp"
                            android:background="#fff"
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90sp"
                                android:layout_height="50sp"
                                android:src="@drawable/house" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#030303"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:text="PROPERTY" />
                        </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:visibility="gone"
                                android:layout_width="90sp"
                                android:layout_height="50sp"
                                android:src="@drawable/accountant" />

                            <TextView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#060606"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:text="LOKER" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>